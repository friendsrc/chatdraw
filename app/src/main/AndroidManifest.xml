<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chatdraw">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CreateGroupActivities.GroupCreateActivity"></activity>
        <activity android:name=".AccountActivity.UsernameEditActivity" />
        <activity android:name=".AccountActivity.NameEditActivity" />
        <activity android:name=".AccountActivity.ProfileEditActivity" />

        <service
            android:name=".Services.MyFirebaseMessagingService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".AccountActivity.NotificationHeaderActivity" />
        <activity android:name=".AccountActivity.PersonalActivity" />
        <activity android:name=".ChatActivites.ChatActivity" />
        <activity android:name=".CreateGroupActivities.NewGroupActivity" />
        <activity android:name=".ChatActivites.NewMessageActivity" />
        <activity android:name=".AccountActivity.SettingsActivity" />
        <activity android:name=".ContactActivites.FindFriendActivity" />
        <activity android:name=".ContactActivites.FriendListActivity" />
        <activity android:name=".AccountActivity.ResetPasswordActivity" />
        <activity android:name=".AccountActivity.SignupActivity" />
        <activity
            android:name=".ChatActivites.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AccountActivity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>