<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ContactActivites.FriendListActivity"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/friend_list_layout">

    <TextView
        android:id="@+id/friend_list_group_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/friend_list_group_recycler_view"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="12sp"
        android:text="Groups"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friend_list_group_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/friend_list_group_textview"
        app:layout_constraintBottom_toTopOf="@id/friend_list_friends_textview"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />


    <TextView
        android:id="@+id/friend_list_friends_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/friend_list_group_recycler_view"
        app:layout_constraintBottom_toTopOf="@id/friend_list_recycler_view"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="12sp"
        android:text="Friends"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friend_list_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/friend_list_friends_textview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <ImageView
        android:id="@+id/add_friend_imageview"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/add_person"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

