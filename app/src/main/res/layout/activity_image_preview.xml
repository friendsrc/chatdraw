<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ImagePreviewActivity">

    <com.otaliastudios.zoom.ZoomImageView
        android:id="@+id/photo_imageView"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scrollbars="vertical|horizontal"
        app:transformation="centerInside"
        app:transformationGravity="auto"
        app:alignment="center"
        app:overScrollHorizontal="true"
        app:overScrollVertical="true"
        app:overPinchable="true"
        app:horizontalPanEnabled="true"
        app:verticalPanEnabled="true"
        app:zoomEnabled="true"
        app:flingEnabled="true"
        app:scrollEnabled="true"
        app:oneFingerScrollEnabled="true"
        app:twoFingersScrollEnabled="true"
        app:threeFingersScrollEnabled="true"
        app:minZoom="0.7"
        app:minZoomType="zoom"
        app:maxZoom="2.5"
        app:maxZoomType="zoom"
        app:animationDuration="280"/>

<!--    <ImageView-->
<!--        android:id="@+id/photo_imageView"-->
<!--        android:background="#000000"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintLeft_toLeftOf="parent"/>-->

    <View
        android:id="@+id/photo_view1"
        android:background="#99000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>

    <ImageView
        android:id="@+id/photo_close_button"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/back"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="@id/photo_view1"
        app:layout_constraintBottom_toBottomOf="@id/photo_view1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/photo_sender_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/photo_close_button"
        app:layout_constraintTop_toTopOf="@id/photo_view1"
        app:layout_constraintBottom_toBottomOf="@id/photo_view1"
        android:textColor="@color/white"
        android:layout_marginLeft="16dp"
        android:textSize="18sp"
        android:text="Placeholder text"/>

    <View
        android:id="@+id/photo_view2"
        android:background="#99000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="56dp"/>

    <ImageView
        android:id="@+id/photo_save_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/download"
        android:padding="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/photo_view2"
        app:layout_constraintBottom_toBottomOf="@id/photo_view2"/>

</androidx.constraintlayout.widget.ConstraintLayout>