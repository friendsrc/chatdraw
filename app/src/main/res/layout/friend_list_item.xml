<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:padding="3dp"
        android:id="@+id/friend_list_profilepicture"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:src="@drawable/friends_icon"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/friend_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Placholder Name"/>
        <TextView
            android:id="@+id/friend_list_chat_preview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Placeholder chat preview"/>
    </LinearLayout>

</LinearLayout>