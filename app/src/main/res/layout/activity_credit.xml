<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center"
    tools:context=".credits.CreditActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:padding="10sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/credit_name"
                android:textSize="22sp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/credit_balance"
                android:textSize="32sp"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:minWidth="64dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="22sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:text="CTD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/history_button"
            android:text="@string/credit_history_button"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button_secondary"
            android:layout_marginRight="10sp"
            android:layout_width="wrap_content"
            android:layout_height="42dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_marginBottom="5sp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:text="Top-Up Credit"
        android:textStyle="bold"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Use Credit to enable draw while chatting feature"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <HorizontalScrollView
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_marginRight="8sp"
                android:layout_marginLeft="8sp"
                android:layout_width="135sp"
                android:layout_height="215sp"
                app:cardCornerRadius="4sp"
                app:cardElevation="1sp"
                app:cardMaxElevation="2sp" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="20sp"
                    android:layout_width="130sp"
                    android:layout_height="210sp">

                    <TextView
                        android:textAlignment="center"
                        android:text="108 CTD"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginTop="10sp"
                        android:textAlignment="center"
                        android:src="@drawable/ic_coin_less"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:layout_marginTop="10sp"
                        android:layout_gravity="center"
                        android:text="$1.68"
                        android:textSize="20sp"
                        android:background="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginRight="8sp"
                android:layout_marginLeft="8sp"
                android:layout_width="135sp"
                android:layout_height="215sp"
                app:cardCornerRadius="4sp"
                app:cardElevation="1sp"
                app:cardMaxElevation="2sp" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="20sp"
                    android:layout_width="130sp"
                    android:layout_height="210sp">

                    <TextView
                        android:textAlignment="center"
                        android:text="258 CTD"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginTop="10sp"
                        android:textAlignment="center"
                        android:src="@drawable/ic_coin_less"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:layout_marginTop="10sp"
                        android:layout_gravity="center"
                        android:text="$3.98"
                        android:textSize="20sp"
                        android:background="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginRight="8sp"
                android:layout_marginLeft="8sp"
                android:layout_width="135sp"
                android:layout_height="215sp"
                app:cardCornerRadius="4sp"
                app:cardElevation="1sp"
                app:cardMaxElevation="2sp" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="20sp"
                    android:layout_width="130sp"
                    android:layout_height="210sp">

                    <TextView
                        android:textAlignment="center"
                        android:text="588 CTD"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginTop="10sp"
                        android:textAlignment="center"
                        android:src="@drawable/ic_coin_less"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:layout_marginTop="10sp"
                        android:layout_gravity="center"
                        android:text="$8.98"
                        android:textSize="20sp"
                        android:background="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginRight="8sp"
                android:layout_marginLeft="8sp"
                android:layout_width="135sp"
                android:layout_height="215sp"
                app:cardCornerRadius="4sp"
                app:cardElevation="1sp"
                app:cardMaxElevation="2sp" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="130sp"
                    android:layout_height="210sp">

                    <FrameLayout
                        android:background="@color/orange_red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="BEST PRICE"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </FrameLayout>

                    <TextView
                        android:layout_marginTop="5sp"
                        android:textAlignment="center"
                        android:text="1028 CTD"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginTop="10sp"
                        android:textAlignment="center"
                        android:src="@drawable/ic_coin_less"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:layout_marginTop="10sp"
                        android:layout_gravity="center"
                        android:text="$14.98"
                        android:textSize="20sp"
                        android:background="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginRight="8sp"
                android:layout_marginLeft="8sp"
                android:layout_width="135sp"
                android:layout_height="215sp"
                app:cardCornerRadius="4sp"
                app:cardElevation="1sp"
                app:cardMaxElevation="2sp" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="20sp"
                    android:layout_width="130sp"
                    android:layout_height="210sp">

                    <TextView
                        android:textAlignment="center"
                        android:text="2098 CTD"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginTop="10sp"
                        android:textAlignment="center"
                        android:src="@drawable/ic_coin_less"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:layout_marginTop="10sp"
                        android:layout_gravity="center"
                        android:text="$29.98"
                        android:textSize="20sp"
                        android:background="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginRight="8sp"
                android:layout_marginLeft="8sp"
                android:layout_width="135sp"
                android:layout_height="215sp"
                app:cardCornerRadius="4sp"
                app:cardElevation="1sp"
                app:cardMaxElevation="2sp" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="130sp"
                    android:layout_height="210sp">

                    <FrameLayout
                        android:background="@color/orange_red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="BEST OFFER"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </FrameLayout>

                    <TextView
                        android:layout_marginTop="5sp"
                        android:textAlignment="center"
                        android:text="4298 CTD"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginTop="10sp"
                        android:textAlignment="center"
                        android:src="@drawable/ic_coin_less"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:layout_marginTop="10sp"
                        android:layout_gravity="center"
                        android:text="$59.98"
                        android:textSize="20sp"
                        android:background="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:text="OR"
        android:textSize="24sp"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/ads_button"
        android:text="Watch an advertisement"
        android:textColor="@color/white"
        android:background="@color/s"
        android:layout_width="250sp"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Watch and get free 3 CTD"
        android:layout_marginTop="2sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>