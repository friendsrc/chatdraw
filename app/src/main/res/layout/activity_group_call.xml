<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onGoingCallLayout"
    android:orientation="vertical"
    android:gravity="top|center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".GroupCallers.GroupCallActivity">

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/groupDetails"
            android:text="Group title"
            android:textSize="20sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/btnBack"
            android:background="@color/white"
            android:padding="10sp"
            android:src="@drawable/ic_exit_to_app_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <GridLayout
            android:id="@+id/mainGrid"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:rowCount="2">
        </GridLayout>
    </ScrollView>

    <LinearLayout
        android:layout_weight="2"
        android:id="@+id/confirmLayout"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/callDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="00:00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/callStatus"
            android:text="...loading..."
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnMute"
                android:background="@color/s"
                android:src="@drawable/ic_mic_off_black"
                android:padding="11sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/btnSpeaker"
                android:background="@color/btn_logut_bg"
                android:src="@drawable/ic_volume_up_black"
                android:padding="11sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:background="@color/orange_red"
                android:id="@+id/btnCancel"
                android:text="End Call"
                android:textSize="16sp"
                android:layout_margin="10sp"
                android:layout_width="130sp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>